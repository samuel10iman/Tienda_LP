    <.form for={@usuario_form} action={~p"/perfil/editar"} as={:usuario} method="put">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <label class="block">
          <span class="text-gray-700">Nombre</span>
          <.input
            field={@usuario_form[:nombre]}
