            class="mt-1 block w-full rounded border-gray-300"
          />
        </label>
        
        <label class="block">
          <span class="text-gray-700">Celular</span>
          <.input
            field={@usuario_form[:celular]}
            value={@usuario.celular}
            class="mt-1 block w-full rounded border-gray-300"
          />
